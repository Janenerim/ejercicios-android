<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="tk.mirenamorrortu.intents.Fragments.send_fragment"
        android:id="@+id/fragment3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:layout="@layout/fragment_send_fragment" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="tk.mirenamorrortu.intents.Fragments.photo_intent"
        android:id="@+id/fragment4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_photo_intent"
        android:layout_alignEnd="@+id/fragment3" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="tk.mirenamorrortu.intents.Fragments.photo_result"
        android:id="@+id/fragment5"
        android:layout_below="@+id/fragment3"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_photo_result"
        android:layout_alignEnd="@+id/fragment3"
        android:layout_above="@+id/fragment4" />
</RelativeLayout>
